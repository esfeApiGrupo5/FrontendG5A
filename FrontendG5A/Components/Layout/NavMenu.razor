@using FrontendG5A.Services
@rendermode InteractiveServer
@inject AuthService AuthService
@inject NavigationManager NavManager
@* Puedes usar NavigationManager para redirigir después del logout *@

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">FrontendG5A</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Inicio
            </NavLink>
        </div>

        @* Lógica Condicional: Si NO está autenticado *@
        @if (!isAuthenticated)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="login">
                    <span class="bi bi-box-arrow-in-right" aria-hidden="true"></span> Iniciar Sesión
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="register">
                    <span class="bi bi-person-plus-fill" aria-hidden="true"></span> Registrarse
                </NavLink>
            </div>
        }
        else
        {
            @* Lógica Condicional: Si SÍ está autenticado *@
            <div class="nav-item px-3">
                <button class="nav-link btn btn-link" @onclick="HandleLogout">
                    <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Cerrar Sesión
                </button>
            </div>

            <div class="nav-item px-3">
            <NavLink class="nav-link" href="blog" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> blogs
            </NavLink>
        </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="usuarios" Match="NavLinkMatch.All">
                    <span class="bi bi-people-fill" aria-hidden="true"></span> Usuarios
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="productos" Match="NavLinkMatch.All">
                    <span class="bi bi-box-seam-fill" aria-hidden="true"></span> Productos
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    private bool isAuthenticated = false;
    private bool firstRender = true; // Flag para controlar que se ejecute solo una vez

    // ✅ USAR OnAfterRenderAsync
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Este código solo se ejecuta después de que el componente interactivo
            // se ha inicializado y la conexión con el cliente está lista (interop habilitado).
            isAuthenticated = await AuthService.IsAuthenticated();

            // Forzamos una actualización para mostrar el menú correcto (Login vs Logout)
            StateHasChanged();
        }
    }

    // Manejador del clic para el botón "Cerrar Sesión" (Se mantiene igual)
    private async Task HandleLogout()
    {
        await AuthService.Logout();
        isAuthenticated = false;
        NavManager.NavigateTo("/", forceLoad: true);
    }
}

