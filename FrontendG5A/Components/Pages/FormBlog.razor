@page "/blog"
@using FrontendG5A.DTO
@using FrontendG5A.Services

@inject AuthService AuthService
@inject BlogService BlogService


<h3>Listado de Blogs</h3>

@if (Blogs == null)
{
    <p><em>Cargando blogs...</em></p>
}
else if (Blogs.Count == 0)
{
    <p>No hay blogs disponibles.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Título</th>
                <th>Autor</th>
                <th>Fecha</th>
                <th>Usuario</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var blog in Blogs)
            {
                <tr>
                    <td>@blog.Titulo</td>
                    <td>@blog.Autor</td>
                    <td>@blog.FechaPublicacion.ToShortDateString()</td>
                    <td>@(blog.InfoUsuario?.NombreUsuario ?? "N/A")</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
     private List<BlogDTO>? Blogs;

    protected override async Task OnInitializedAsync()
    {
        // Verificar si hay token en almacenamiento
        var token = await AuthService.GetToken();

        if (!string.IsNullOrEmpty(token))
        {
            // Configura el HttpClient para usarlo
            await AuthService.SetToken(token);
        }

        // Llama al servicio para obtener blogs
        Blogs = await BlogService.ObtenerBlogsAsync();
    }
}